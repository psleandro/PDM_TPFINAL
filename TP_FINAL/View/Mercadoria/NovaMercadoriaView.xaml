<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="FORMULÁRIO MERCADORIA"
             x:Class="TP_FINAL.View.Mercadoria.NovaMercadoriaView">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Entry x:Name="txtNome" Placeholder="Nome" />
            <Entry x:Name="txtPeso" Placeholder="Peso" />
            <Entry x:Name="txtNomeProd" Placeholder="Nome do produtor" />
            <Entry x:Name="txtEmail" Placeholder="E-mail do produtor" />
            <Entry x:Name="txtNCM" Placeholder="NCM" />
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" >
                <Button x:Name="btnCancelar" Text="Cancelar" Clicked="OnCancelar" />
                <Button x:Name="btnSalvar" Text="Salvar" Clicked="OnSalvar" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>